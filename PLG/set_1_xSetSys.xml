<App Type="SUBMENU" Category="1" Icon="SET_SYSTEM" Name="{SETSYS0.NAME}" Description="{SETSYS0.DESC}">
  <Option Type="CONTEXT" Icon="15" Default="{UserConfig.Language}" Name="{SETSYS1.NAME}" Description="{SETSYS1.DESC}" >
    <Component Name="English"/>
    <Component Name="Français"/>
    <Component Name="Español"/>
    <Component Name="Deutsch"/>
    <Component Name="Italiano"/>
    <Component Name="Nederlands"/>
    <Component Name="Português"/>
    <Confirm>
      <![CDATA[
        function(index, item) {
            UserConfig.Language = index;
            CfgMan.PropertySet("main.cfg", "lang", index.toString());
        }
      ]]>
    </Confirm>
  </Option>
  <Option Type="CONTEXT" Icon="15" Default="{UserConfig.ConfirmBtn}" Name="{SETSYS2.NAME}" Description="{SETSYS2.DESC}">
    <Component Name="X"/>
    <Component Name="O"/>
    <Confirm>
      <![CDATA[
        function(index, item) {
            UserConfig.ConfirmBtn = index;
            CfgMan.PropertySet("main.cfg", "btnType", index.toString());
        }
      ]]>
    </Confirm>
  </Option>
  <Option Type="CONTEXT" Icon="15" Default="{UserConfig.Warning}" Name="{SETSYS3.NAME}" Description="{SETSYS3.DESC}">
    <Component Name="{NO}" Icon="-1"/>
    <Component Name="{YES}" Icon="-1"/>
    <Confirm>
      <![CDATA[
        function(index, item) {
            UserConfig.Warning = index;
            CfgMan.PropertySet("main.cfg", "warn", index.toString());
        }
      ]]>
    </Confirm>
  </Option>
  <Option Type="CONTEXT" Icon="15" Default="{Number(UserConfig.Disctray)}" Name="{SETSYS4.NAME}" Description="{SETSYS4.DESC}">
    <Component Name="{NO}" Icon="-1"/>
    <Component Name="{YES}" Icon="-1"/>
    <Confirm>
      <![CDATA[
        function(index, item) {
            UserConfig.Disctray = index === 1;
            CfgMan.PropertySet("main.cfg", "cdvd", UserConfig.Disctray.toString());
        }
      ]]>
    </Confirm>
  </Option>
  <Option Type="SUBMENU" Icon="SET_CFG" Name="{DEVTOOLS.NAME}" Description="{DEVTOOLS.DESC}">
    <Option Type="CONTEXT" Icon="SET_CFG" Name="{DEVTOOLS.FPS_NAME}" Description="{DEVTOOLS.FPS_DESC}">
      <Component Name="{NO}" Icon="-1"/>
      <Component Name="{YES}" Icon="-1"/>
      <Default>
        <![CDATA[
          return (UserConfig.DevToolsFPS) ? 1 : 0;
        ]]>
      </Default>
      <Confirm>
        <![CDATA[
          function(index, item) {
            const enabled = (index === 1);
            UserConfig.DevToolsFPS = enabled;
            CfgMan.PropertySet("main.cfg", "devfps", enabled.toString());
            if (typeof DevToolsOverlay !== 'undefined') { DevToolsOverlay.setEnabled(enabled); }
          }
        ]]>
      </Confirm>
    </Option>
  </Option>
  <Option Type="DIALOG" Icon="15" Name="{SETSYS5}">
    <Dialog Type="INFO" BG="false" Icon="8" Title="{SETSYS5}" BackBtn="true" ConfirmBtn="false">
	    <Info>
		    <Item Name="{SYSINFO.MODEL}" Value="{SCERomVerInfo.Model}" Selectable="false" />
		    <Item Name="ROMVER" Value="{SCERomVerInfo.VersionFormatted}" Selectable="false" />
		    <Item Name="{SYSINFO.BROWSER}" Value="{SCERomVerInfo.OSDVER}" Selectable="false" />
		    <Item Name="{SYSINFO.CD_PLAYER}" Value="{SCERomVerInfo.CDVER}" Selectable="false" />
		    <Item Name="Playstation Driver" Value="{SCERomVerInfo.PS1VER}" Selectable="false" />
        <Item Name="{SYSINFO.DVD_PLAYER}" Value="{SCERomVerInfo.DVDVER}" Selectable="false" />
		    <Item Name="Region" Value="{SCERomVerInfo.Region}" Selectable="false" />
		    <Item Name="{SYSINFO.CONSOLE_TYPE}" Value="{SCERomVerInfo.Hardware}" Selectable="false" />
        <Item Name="{SYSINFO.BUILD_DATE}" Value="{SCERomVerInfo.Date}" Selectable="false" />
	    </Info>
	  </Dialog>
  </Option>
</App>
